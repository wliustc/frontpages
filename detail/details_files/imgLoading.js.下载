(function(){$.fn.imglazyLoad=function(b){return new a(b)};var a=(function(){var b=function(c){this.duration=c.duration?c.duration:this.duration;this.container=c.container?c.container:this.container;this._src=c._src?c._src:this._src;this.rangeH=c.rangeH?c.rangeH:this.rangeH;this.animationName=c.animationName?c.animationName:this.animationName;this.showDelay=c.showDelay?c.showDelay:this.showDelay;this.styleContianer=c.styleContianer?c.styleContianer:this.styleContianer;this.init()};b.prototype={refreshTimer:null,duration:30,_src:"_src",container:"imgContainer",rangeH:0,animationName:"fade",showDelay:"400ms",styleContianer:"styleID",belowthefold:function(c){return $(window).scrollTop()-this.rangeH<=$(c).offset().top},abovethetop:function(c){return $(c).offset().top<=$(window).scrollTop()+document.documentElement.clientHeight+this.rangeH},inViewport:function(c){return this.belowthefold(c)&&this.abovethetop(c)},setStyle:function(e,d){for(var c in d){e.style[c]=d[c]}},addStyle:function(){var c=document.getElementById(this.styleContianer);if(c){c.innerHTML+="<style> @-webkit-keyframes fade { 0%   { opacity: 0; } 100% { opacity: 1; } } @keyframes fade {  0%   { opacity: 0; }  100% { opacity: 1; } }</style>"}},loading:function(){var d=this;var e=[];var c=document.getElementById(d.container);if(c){e=$(c).find("img["+d._src+"]")}else{e=$("img["+d._src+"]")}e.each(function(g){var f=e.eq(g);if(d.inViewport(f)){d.changSrc(f)}})},changSrc:function(d){var c=this,f;var g=d.attr(""+c._src+"");var e=new Image();e.src=g;e.onload=function(){d.attr("src",g).removeAttr(""+c._src+"");c.setStyle(d[0],{animation:c.animationName+" "+c.showDelay+" 0s",webkitAnimation:c.animationName+" "+c.showDelay+" 0s"})}},init:function(){var c=this;c.addStyle();if(c.refreshTimer){clearTimeout(c.refreshTimer);c.refreshTimer=null}c.refreshTimer=setTimeout(function(){c.loading()},10);$(window).on("scroll",function(){if(c.refreshTimer){clearTimeout(c.refreshTimer);c.refreshTimer=null}c.refreshTimer=setTimeout(f